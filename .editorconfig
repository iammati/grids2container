# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline (LF) ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# TS/JS-Files
[*.{ts,js}]
indent_style = space
indent_size = 4

# JSON-Files
[*.json]
indent_style = space
indent_size = 4

# ReST-Files
[*.rst]
indent_size = 4
max_line_length = 80

# YAML-Files
[*.{yaml,yml}]
indent_size = 2

# NEON-Files
[*.neon]
indent_size = 4
indent_style = space

# package.json
[package.json]
indent_size = 4

# TypoScript
[*.{typoscript,tsconfig}]
indent_size = 4

# XLF-Files
[*.xlf]
indent_style = space

# SQL-Files
[*.sql]
indent_style = space
indent_size = 4

# .htaccess
[{_.htaccess,.htaccess}]
indent_style = tab
